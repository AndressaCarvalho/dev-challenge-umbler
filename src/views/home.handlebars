<form action="/domain-view" method="GET">
    <input type="text" name="txtsearch" id="txtsearch" placeholder="DomÃ­nio" class="form-control" onkeypresults="validateDomain();" onblur="validateDomain();"><br>

    <button type="submit" id="btn-search" class="btn btn-block btn-success" style="display: none;">Pesquisar...</button>
</form>

<pre>
    {{{dataDomain}}}
</pre>

<script type="text/javascript">
    function validateDomain() {
        let valDomain = document.getElementById('txtsearch').value

        let resultValidate = valDomain.match(/^(?:https?:\/\/)?(w{3}\.)?[\w_-]+((\.\w{2,}){1,2})(\/([\w\._-]+\/?)*(\?[\w_-]+=[^\?\/&]*(\&[\w_-]+=[^\?\/&]*)*)?)?$/)
        if (resultValidate) {
            document.getElementById('btn-search').style.display = 'block'
            return true
        }
        document.getElementById('btn-search').style.display = 'none'
        return false
    }
</script>